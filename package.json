{
    "name": "slots",
    "version": "1.0.0",
    "description": "Simple Slot Machine",
    "keywords": [
        "typescript",
        "express",
        "tdd",
        "bdd",
        "api",
        "game"
    ],
    "homepage": "https://github.com/superhornet/slots#readme",
    "bugs": {
        "url": "https://github.com/superhornet/slots/issues"
    },
    "directories": {
        "doc": "docs"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/superhornet/slots.git"
    },
    "license": "Apache-2.0",
    "author": "Caleb King",
    "type": "module",
    "main": "dist/js/index.js",
    "scripts": {
        "doc": "typedoc --plugin typedoc-plugin-rename-defaults --entryPointStrategy expand src/ts/",
        "clean": "rimraf dist/ docs/",
        "lint": "tslint -c tslint.json -p tsconfig.json --fix",
        "tsc": "node ./node_modules/typescript/bin/tsc",
        "build": "npm-run-all clean lint tsc",
        "dev:start": "npm-run-all build start",
        "dev": "nodemon --watch src -e ts --exec npm run dev:start",
        "start": "node .",
        "test": "jasmine",
        "test:cucumber": "cucumber-js test"
    },
    "overrides": {
        "inflight": "latest",
        "glob": "latest"
    },
    "devDependencies": {
        "@cucumber/cucumber": "^12.4.0",
        "@types/dotenv": "^6.1.1",
        "@types/express": "^5.0.6",
        "@types/fs-extra": "^11.0.4",
        "@types/jasmine": "^5.1.13",
        "@types/node": "^25.0.3",
        "@types/shelljs": "^0.10.0",
        "fs-extra": "^11.3.3",
        "jasmine": "^5.13.0",
        "nodemon": "^3.1.11",
        "npm-run-all": "^4.1.5",
        "rimraf": "^6.1.2",
        "shelljs": "^0.10.0",
        "ts-node": "^10.9.2",
        "tslint": "^5.20.1",
        "typedoc": "^0.28.15",
        "typedoc-plugin-rename-defaults": "^0.7.3",
        "typescript": "^5.9.3"
    },
    "dependencies": {
        "dotenv": "^17.2.3",
        "express": "^5.2.1"
    }
}

{
    "name": "slots",
    "version": "1.0.0",
    "description": "Simple Slot Machine",
    "keywords": [
        "typescript",
        "express",
        "tdd",
        "bdd",
        "api",
        "game"
    ],
    "homepage": "https://github.com/superhornet/slots#readme",
    "bugs": {
        "url": "https://github.com/superhornet/slots/issues"
    },
    "directories": {
        "doc": "docs"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/superhornet/slots.git"
    },
    "license": "Apache-2.0",
    "author": "Caleb King",
    "type": "module",
    "main": "dist/js/index.js",
    "scripts": {
        "doc": "typedoc --plugin typedoc-plugin-rename-defaults --entryPointStrategy expand src/main/ts",
        "clean": "rimraf dist/ docs/",
        "lint": "eslint . --ext .ts,.tsx",
        "tsc": "node ./node_modules/typescript/bin/tsc",
        "build": "npm-run-all clean lint tsc",
        "dev:start": "npm-run-all build start",
        "dev": "nodemon --watch src -e ts --exec npm run dev:start",
        "start": "node .",
        "test": "node --test ./src/test/ts/**/*.Test.ts",
        "testWithCoverage": "node --test --experimental-test-coverage --test-reporter=spec --test-reporter-destination=stdout ./src/test/ts/**/*.Test.ts",
        "test:cucumber": "cucumber-js test"
    },
    "overrides": {
        "inflight": "latest",
        "glob": "latest"
    },
    "devDependencies": {
        "@cucumber/cucumber": "^12.4.0",
        "@eslint/eslintrc": "^3.3.3",
        "@eslint/js": "^9.39.2",
        "@eslint/migrate-config": "^2.0.0",
        "@types/dotenv": "^6.1.1",
        "@types/express": "^5.0.6",
        "@types/fs-extra": "^11.0.4",
        "@types/jest": "^30.0.0",
        "@types/node": "^25.0.3",
        "@types/shelljs": "^0.10.0",
        "@typescript-eslint/eslint-plugin": "^8.50.1",
        "@typescript-eslint/parser": "^8.50.1",
        "eslint": "^9.39.2",
        "fs-extra": "^11.3.3",
        "nodemon": "^3.1.11",
        "npm-run-all": "^4.1.5",
        "rimraf": "^6.1.2",
        "shelljs": "^0.10.0",
        "ts-jest": "^29.4.6",
        "ts-node": "^10.9.2",
        "typedoc": "^0.28.15",
        "typedoc-plugin-rename-defaults": "^0.7.3",
        "typescript": "^5.9.3"
    },
    "dependencies": {
        "dotenv": "^17.2.3",
        "express": "^5.2.1"
    }
}
